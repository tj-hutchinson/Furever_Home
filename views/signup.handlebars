<div class="container ">
    <div class="row d-flex align-items-center min-vh-100">
        <div class="col-md-6 col-md-offset-3 mx-auto" id="log-sign">
            <br>
            <h2>Welcome to Fur-Ever-Home!</h2>
            <form class="signup">
                <div class="form-group">
                    <label for="exampleInputFirstName1">First name</label>
                    <input type="text" class="form-control" id="first-name-input" placeholder="John">
                </div>
                <div class="form-group">
                    <label for="exampleInputLastName1">Last name</label>
                    <input type="text" class="form-control" id="last-name-input" placeholder="Doe">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="email-input" placeholder="johndoe@doglover.com">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="password-input" placeholder="password">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg"></span>
                </div>
                <br>
                <button type="submit" class="btn btn-light">Sign Up</button>
            </form>
            <br />
            <p>Already have an account? Click <a href="/">here</a> to login!</p>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="js/signup.js"></script>